---
const Container = "div";

export interface CardProps {
  title: string;
  description: string;
  image: boolean;
}

const { title, description, image } = Astro.props;
---

<li class="card">
  {image && <img src={image} alt="Imagen" />}
  <h4 class="card-title">{title}</h4>
  <p class="card-text">{description}</p>
  <slot name="desc">
    <p>Texto slot por defecto.</p>
  </slot>
</li>

<style>
  .card {
    background: white;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin: 1rem;
    padding: 1rem;
    width: 100%; /* Asegura que todas las tarjetas tengan la misma anchura */
    max-width: 300px; /* Tamaño máximo de las tarjetas */
    height: 100%; /* Asegura que todas las tarjetas tengan la misma altura */
  }

  .card-title {
    color: #333;
    font-size: 1.5rem;
    margin: 0;
  }

  .card-text {
    color: #666;
    font-size: 1rem;
    margin: 0;
  }

  img {
    border-radius: 8px;
    height: 200px;
    object-fit: cover;
    width: 100%;
  }
</style>
