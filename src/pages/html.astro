---
import Layout from "@layouts/Layout.astro";
import Title from "@components/Title.astro";
import BlogPreview from "@components/BlogPreview.astro";

// Cargar los posts
let posts = await Astro.glob("./Post/html/*.md");

debugger;
console.log(posts.frontmatter);

posts = posts.sort((postA, postB) => {
	return (
		new Date(postB.frontmatter.date) -
		new Date(postA.frontmatter.date)
	);
});
---

<Layout title="Bienvenido al blog.">
	<Title
		title="Javascript"
		subtitle="Este es el subtitulo Javascript"
		description="Esta es la descripcion"
	/>

	{posts.map((post) => <BlogPreview post={post} />)}
</Layout>
